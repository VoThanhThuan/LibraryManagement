@using Library.Library.Entities
@model (Borrow borrow, List<Book> books)

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Borrow</h4>
<hr />
<div class="page-content-inner">
    <div>
        <div class="list-flex-toolbar">
            <div class="search">
                <div class="control">
                    <input class="input" type="text" placeholder="Search...">
                    <div class="form-icon" data-v-aad2da70=""><svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" aria-hidden="true" role="img" class="iconify iconify--feather" width="1.1em" height="1.1em" preserveAspectRatio="xMidYMid meet" viewBox="0 0 24 24" data-icon="feather:search" data-v-aad2da70=""><g fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><path d="M21 21l-4.35-4.35"></path></g></svg></div>
                </div>
            </div>
        </div>
        <div class="flex-table">
            <div class="flex-table-header">
                <span class="is-grow-2">Ảnh bìa</span>
                <span>Nhà xuất bản</span>
                <span>Số lượng</span>
                <span>Mã thư viện</span>
                <span>Số ngày mượn</span>
                <span class="call-end">actions</span>
            </div>
            @foreach (var item in Model.books)
            {
                <div class="flex-list-inner">
                    <div>
                        <div class="flex-table-cell">
                            <span class="light-text">@item.Id</span>
                        </div>
                        <div class="flex-table-item">
                            <div class="flex-table-cell is-media is-grow2">
                                <div class="is-avatar is-medium">
                                    <img class="medium" src="@item.Thumbnail" alt="">
                                </div>
                                <div>
                                    <span class="item-name">@item.Name</span>
                                    <span class="item-meta">
                                        <span>Tác giả: @item.Author</span>
                                    </span>
                                </div>
                            </div>
                            <div class="flex-table-cell">
                                <span class="light-text">@item.PublishingCompany</span>
                            </div>

                            <div class="flex-table-cell">
                                <span class="light-text">@item.Amount</span>
                            </div>
                            <div class="flex-table-cell">
                                <span class="light-text">@item.IdLibraryCode</span>
                            </div>
                            <div class="flex-table-cell">
                                <span class="light-text">@item.DateCanBorrow Ngày</span>
                            </div>
                            <div class="flex-table-cell call-end">
                                <div class="icon-action">
                                    <button class="add-book-borrow" value="@item.Id">Add<i class="fal fa-wrench"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <!---->
                <div id="book-choose"></div>
                <!---->
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="borrow.Note" class="control-label"></label>
                    <input asp-for="borrow.Note" name="Note" class="form-control" />
                    <span asp-validation-for="borrow.Note" class="text-danger"></span>
                </div>userCurrent
                <div class="form-group">
                    <label asp-for="borrow.IdUser" class="control-label"></label>
                    <input asp-for="borrow.IdUser" name="IdUser" class="form-control" value="@ViewData["Id-User"]" hidden/>
                    <span asp-validation-for="borrow.IdUser" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="borrow.UserName" class="control-label"></label>
                    <input asp-for="borrow.UserName" name="UserName" class="form-control" value="@ViewData["Name-User"]" hidden/>
                    <span asp-validation-for="borrow.UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="borrow.IdCard" class="control-label"></label>
                    <select asp-for="borrow.IdCard" name="IdCard" class="form-control" asp-items="ViewBag.IdCard"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $$('.add-book-borrow').forEach(function(button) {
            button.addEventListener('click',
                function() {
                    //add element to html dom
                    $('#book-choose').innerHTML += `
                <input type="text" name="idBooks" value="${button.value}">
                `;
                });
        });

    </script>
}
