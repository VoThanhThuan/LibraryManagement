                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>

                                <div class="dropdown-menu-flex" data-v-25f969c0="" data-hide="">
                                    <div class="dropdown-content-flex" data-v-25f969c0="">
                                        <a class="is-media-flex" href="#">
                                            <div class="icon-flex">
                                                <i class="fal fa-eye"></i>
                                            </div>
                                            <div class="meta-flex">
                                                <span>Xem</span>
                                                <span>Xem thông tin</span>
                                            </div>
                                        </a>
                                    </div>
                                    <div class="dropdown-content-flex" data-v-25f969c0="">
                                        <a class="is-media-flex" href="#">
                                            <div class="icon-flex">
                                                <i class="fas fa-wrench"></i>
                                            </div>
                                            <div class="meta-flex">
                                                <span>Sửa</span>
                                                <span>Sửa thông tin</span>
                                            </div>
                                        </a>
                                    </div>
                                    <hr class="dropdown-divider-flex">
                                    <div class="dropdown-content-flex" data-v-25f969c0="">
                                        <a class="is-media-flex" href="#">
                                            <div class="icon-flex">
                                                <i class="fal fa-trash-alt"></i>
                                            </div>
                                            <div class="meta-flex">
                                                <span>Xóa</span>
                                                <span>Xóa khỏi danh sách</span>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div> 

