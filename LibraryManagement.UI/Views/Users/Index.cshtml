                </div>
            </div>
            <div class="button">
                <a asp-action="Create" class="v-button is-primary is-elevated">
                    <span class="icon">
                        <i class="far fa-plus"></i>
                    </span>
                    <span>Add User</span>
                </a>
            </div>
        </div>
        <div class="flex-table">
            <div class="flex-table-header">
                <span class="is-grow-2">User</span>
                <span>Email</span>
                <span>@Html.DisplayNameFor(model => model.RoleName)</span>
                <span>@Html.DisplayNameFor(model => model.Username)</span>
                <span>@Html.DisplayNameFor(model => model.Address)</span>
                <span class="call-end">actions</span>
            </div>

            @foreach (var item in Model)
            {
                <div class="flex-list-inner">
                    <div>
                        <div class="flex-table-item">
                            <div class="flex-table-cell is-media is-grow2">
                                <div class="is-avatar is-medium">
                                    <img class="avatar" src="./src/img/2.png" alt="">
                                </div>
                                <div>
                                    <span class="item-name">@Html.DisplayFor(modelItem => item.Nickname)</span>
                                    <span class="item-meta">
                                        <span>@Html.DisplayFor(modelItem => item.PhoneNumber)</span>
                                    </span>
                                </div>
                            </div>
                            <div class="flex-table-cell">
                                <span class="light-text">@Html.DisplayFor(modelItem => item.Email)</span>
                            </div>

                            @if (item.RoleName.ToLower() != "admin")
                            {
                                <div class="flex-table-cell">
                                    <span class="is-success tag" style="background: #10785d; ">@Html.DisplayFor(modelItem => item.RoleName)</span>
                                </div>
                            }
                            else
                            {
                                <div class="flex-table-cell">
                                    <span class="is-success tag">@Html.DisplayFor(modelItem => item.RoleName)</span>
                                </div>
                            }

                            <div class="flex-table-cell">
                                <span class="light-text"> @Html.DisplayFor(modelItem => item.Username)</span>
                            </div>
                            <div class="flex-table-cell">
                                <span class="light-text"> @Html.DisplayFor(modelItem => item.Address)</span>
                            </div>
                            <div class="flex-table-cell call-end">
                                @*<div class="is-right dropdown is-pushed-mobile">
            <a href="#" class="is-trigger dropdown-trigger" data-v-25f969c0="">
