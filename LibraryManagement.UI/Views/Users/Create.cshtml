                            </div>
                        </div>
                        <div class="column is-6">
                            <div class="field">
                                <label>Role</label>
                                <div class="control">
                                    <select class="input" aria-label="Default select example" name="IdRole">
                                        @{
                                            var roles = (List<Role>)ViewBag.Roles;
                                            foreach (var role in roles)
                                            {
                                                <option value="@role.Id">@role.Name</option>
                                            }
                                        }
